<main>
    {{!-- DISPLAY TABLE WITH ALL DATA --}}
    <div id="browse">
    <table id="medicalcares_table">
        {{!-- DISPLAY COLUMN TITLES --}}
        <thead>
            <tr>
                <th width=110px><button class="modify" onClick="newRecord()">add</button></th>
                <th width=4%>id</th>
                <th>treatment name</th>
            </tr>
        </thead>
        {{!-- DISPLAY ROWS --}}
        <tbody>
            {{#each medicalcares}}
            <tr>
                <td></td>
                <td class="id">{{this.idMedicalCare}}</td>
                <td>{{this.treatment}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
    
    {{!-- DISPLAY TABLE TO INSERT DATA --}}
    <div id="insert" style="display: none">
        <form id="add_medicalcare_form_ajax">
              <table class="insert_table">
                {{!-- DISPLAY COLUMN TITLES --}}
                <tr>
                  <th>treatment name</th>
                </tr>
                {{!-- DISPLAY ROWS --}}
                <tr>
                  <td>
                    <textarea name="treatment" id="input_treatment" placeholder="max. 30 characters"></textarea>
                  </td>
                </tr>
              </table>
            <div class="space"></div>
            <div class="actions">
                <button class="modify confirm" type="submit" id="addMedicalCare">confirm</button>
              <button class="modify accent" type="button" onClick="browseRecords()">cancel</button>
            </div>
        </form> 
    </div>
</main>


