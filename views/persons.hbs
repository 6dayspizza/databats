<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        {{> header}}

<main>
    <div id="browse">
    <table id="persons_table">
        <caption></caption>
        {{!-- Header section --}}
        <thead>
            <tr>
                <th width=4%><a href="#"class="modify" onClick="newRecord()">add</a></th>
                <th width=4%>id</th>
                <th>person name</th>
            </tr>
        </thead>

            {{!-- Body section --}}
        <tbody>
            {{#each persons}}
            <tr>
                <td></td>
                <td>{{this.idPerson}}</td>
                <td>{{this.name}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
        
    </div>
        <div id="insert" style="display: none">
            <form id="add_person_form_ajax">
                <legend><strong>add person</strong></legend>
                <fieldset class="fields">
                  <table class="insert_table">
                    <tr>
                      <th>name</th>
                    </tr>
                    <tr>
                      <td>
                        <textarea name="name" id="input_name" placeholder="max. 30 characters"></textarea>
                      </td>
                    </tr>
                  </table>
                </fieldset>
                <p></p>
                  <input class="btn" type="submit" id="addPerson" value="commit">
                  <input class="btn" type="button" value="cancel" onClick="browseRecords()">
              </form> 
        </div>
    </main>

    <hr>

</div>


{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="js/add_person.js"></script>
